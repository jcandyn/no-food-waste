<body>
    <header class="main-header">
        <div class="container">
            <h1>Shopping</h1>
        </div>
    </header>
    <div class="container">
        <main>
            <form class="mt-3" id="addItemForm">
                <div class="input-group mb-3">
                    <input type="text" id="itemName" class="form-control" placeholder="Item name" required>
                    <button type="submit" class="btn btn-primary" onclick="addItem()">Add Item</button>
                </div>
            </form>

            <ul class="list-group" id="itemList">
                {{#each shoppingList.items}}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    {{this}}
                    <button class="btn btn-danger" onclick="deleteItem('{{_id}}')">Delete</button>
                </li>
                {{/each}}
            </ul>
        </main>
    </div>

